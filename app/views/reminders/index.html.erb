<p id="notice"><%= notice %></p>

<h1>Reminders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      
            

        <tr>
       <% if reminder.date_of_birth.strftime('%d-%m') == Date.today.strftime('%d-%m') %>
        <td><%= reminder.name %></td>
        <td><%= reminder.email %></td>

        <td>today is <%= reminder.name %>'s birthday</td>
        <td><%= link_to 'Send',{:controller => "reminders", :action => "add", :id => reminder} %></td>

         
       
        
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
     <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reminder', new_reminder_path %>
